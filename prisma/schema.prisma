generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id   String @id @default(cuid())
  Name String
}

model Question {
  id       String     @id @default(cuid())
  Question String
  Content  String
  Rseponse Response[]
}

model Response {
  id         String   @id @default(cuid())
  Question   Question @relation(fields: [questionId], references: [id])
  questionId String
}
